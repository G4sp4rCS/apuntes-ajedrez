{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar LaTeX (pdflatex)",
      "type": "shell",
      "command": "${env:LOCALAPPDATA}/Programs/MiKTeX/miktex/bin/x64/pdflatex.exe",
      "args": ["-interaction=nonstopmode", "main.tex"],
      "options": {
        "cwd": "${workspaceFolder}/caro-kann"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Ver PDF",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "start ${workspaceFolder}\\caro-kann\\main.pdf"],
      "dependsOn": ["Compilar LaTeX (pdflatex)"],
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
